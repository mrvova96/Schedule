<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.schedule.ScheduleAddFragment">

    <TextView
        android:id="@+id/textViewTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/raleway_medium"
        android:text="Выберите преподавателя"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/layoutSelectTeacher"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutSelectTeacher"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="50dp"
        android:visibility="invisible"
        android:background="@drawable/style_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTeacher"
        app:layout_constraintWidth_max="300dp">

        <Spinner
            android:id="@+id/spinnerSelectTeacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/raleway_medium"
        android:text="Выберите группу"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/layoutSelectGroup1"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutSelectGroup1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/style_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGroup1"
        app:layout_constraintWidth_max="300dp">

        <Spinner
            android:id="@+id/spinnerSelectGroup1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBoxGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Добавить еще одну группу"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:textSize="18sp"
        android:paddingTop="3dp"
        android:fontFamily="@font/raleway_medium"
        android:layout_marginStart="-7dp"
        app:layout_constraintStart_toStartOf="@+id/layoutSelectGroup1"
        app:layout_constraintTop_toBottomOf="@+id/layoutSelectGroup1" />

    <LinearLayout
        android:id="@+id/layoutSelectGroup2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/style_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxGroup2"
        app:layout_constraintWidth_max="300dp">

        <Spinner
            android:id="@+id/spinnerSelectGroup2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewLesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/raleway_medium"
        android:text="Выберите предмет"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/layoutSelectLesson"
        app:layout_constraintTop_toBottomOf="@+id/layoutSelectGroup2" />

    <LinearLayout
        android:id="@+id/layoutSelectLesson"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/style_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLesson"
        app:layout_constraintWidth_max="300dp">

        <Spinner
            android:id="@+id/spinnerSelectLesson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewClassroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/raleway_medium"
        android:text="Выберите аудиторию"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/layoutSelectClassroom"
        app:layout_constraintTop_toBottomOf="@+id/layoutSelectLesson" />

    <LinearLayout
        android:id="@+id/layoutSelectClassroom"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/style_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewClassroom"
        app:layout_constraintWidth_max="300dp">

        <Spinner
            android:id="@+id/spinnerSelectClassroom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonAddSchedule"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/style_button_login"
        android:fontFamily="@font/raleway_semibold"
        android:text="Сохранить"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutSelectClassroom" />

</androidx.constraintlayout.widget.ConstraintLayout>